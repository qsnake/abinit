        if test "${afb_tarball}" = "yes"; then
          lib_wannier90_incs=""
          lib_wannier90_libs="-L\$(fallbacks_instdir)/lib -lwannier90"
        else
          AC_MSG_ERROR([could not download WANNIER90 fallback tarball
