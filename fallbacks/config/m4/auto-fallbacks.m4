    ABI_TRICKS_WANNIER90(${fc_vendor},${fc_version})
  fi

  dnl Substitute variables needed for the use of the fallback
  AC_SUBST(lib_wannier90_incs)
  AC_SUBST(lib_wannier90_libs)

